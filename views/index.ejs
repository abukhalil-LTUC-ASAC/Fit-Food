<section class="gradiant-img-background">
  <form action="/search" method="GET">
    <div class="firstDiv-home">
      <h2>Find somthing to eat</h2>
      <input
        class="input-style"
        type="text"
        name="searchFood"
        id="searchFood"
        placeholder="e.g., tomato salad, potato, chocolate"
      />
      <button class="button-style hvr-back-pulse-green" type="submit">
        Search
      </button>
      <button id="refine" class="button-style-2 hvr-back-pulse" type="button">
        Refine search by
      </button>
    </div>
    <div id='filter' class="secondDiv-home">
      <div>
        <p>Calorie</p>
        <label for="from">From</label>
        <input id="from" type="number" placeholder="00.00" />
        <label for="to">To</label>
        <input id="to" type="number" placeholder="00.00" />
        <a class="hvr-back-pulse-green" href="#">Calculate it</a>
      </div>
      <div>
        <p>Diet</p>
        <input type="checkbox" id="fat" name="kind" value="Low-fat" />
        <label for="fat">Low-fat</label>
        <input type="checkbox" id="Sodium" name="kind" value="Low-Sodium" />
        <label for="Sodium">Low-Sodium</label>
        <input type="checkbox" id="Sugar" name="kind" value="Low-Sugar" />
        <label for="Sugar">Low-Sugar</label>
        <input type="checkbox" id="Vegetarian" name="kind" value="Low-Sugar" />
        <label for="Vegetarian">Vegetarian</label>
      </div>
    </div>
  </form>
</section>
